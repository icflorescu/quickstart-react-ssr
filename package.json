{
  "name": "quickstart-react-ssr",
  "version": "1.0.0",
  "author": "Ionut-Cristian Florescu <ionut.florescu@gmail.com> (https://github.com/icflorescu)",
  "license": "ISC",
  "scripts": {
    "start:dev": "nodemon",
    "start:wds": "webpack-dev-server --progress",
    "build:server": "rimraf lib && babel src -d lib",
    "build:client": "rimraf dist && cross-env NODE_ENV=production webpack --progress && gzip -9 -q dist/**/*",
    "build": "yarn build:server && yarn build:client",
    "start": "yarn build && cross-env NODE_ENV=production pm2 start lib/server --name app",
    "stop": "pm2 stop app && pm2 delete app",
    "monit": "pm2 monit",
    "test": "eslint src webpack.config.babel.js --ext .js,.jsx",
    "precommit": "yarn test",
    "prepush": "yarn build"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.15.2",
    "mime": "^1.3.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-helmet": "^5.0.1",
    "react-redux": "^5.0.3",
    "react-router": "^4.0.0",
    "redux": "^3.6.0",
    "socket.io": "^1.7.3"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "cross-env": "^3.2.4",
    "eslint": "^3.18.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "husky": "^0.13.3",
    "nodemon": "^1.11.0",
    "pm2": "^2.4.2",
    "promise-polyfill": "^6.0.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-router-dom": "^4.0.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "socket.io-client": "^1.7.3",
    "unfetch": "^2.1.2",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2"
  }
}
